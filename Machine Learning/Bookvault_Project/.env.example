# ============================================================================
# BookVault Configuration Template
# Copy this file to .env and fill in your values
# ============================================================================

# ----------------------------------------------------------------------------
# API KEYS (REQUIRED)
# ----------------------------------------------------------------------------

# OpenAI API Key (REQUIRED for AI features)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Google Books API Key (OPTIONAL - increases rate limits)
# Get your key from: https://console.cloud.google.com/apis/credentials
GOOGLE_BOOKS_API_KEY=

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------------------------------------

# SQLite database file path
BOOKVAULT_DB=bookvault_cache.db

# Cache expiry time in hours
CACHE_TTL_HOURS=24

# LRU cache size (number of items)
CACHE_SIZE=256

# ----------------------------------------------------------------------------
# API SETTINGS
# ----------------------------------------------------------------------------

# Request timeout in seconds
API_TIMEOUT=30

# Maximum retry attempts for failed requests
MAX_RETRIES=3

# ----------------------------------------------------------------------------
# RETRY CONFIGURATION (NEW)
# ----------------------------------------------------------------------------

# Maximum number of retry attempts for API calls
RETRY_MAX_ATTEMPTS=3

# Initial delay between retries in seconds
RETRY_INITIAL_DELAY=1.0

# Exponential backoff multiplier
RETRY_BACKOFF_MULTIPLIER=2.0

# ----------------------------------------------------------------------------
# OPENAI MODEL SETTINGS (NEW)
# ----------------------------------------------------------------------------

# OpenAI model name
OPENAI_MODEL=gpt-4o-mini

# Max tokens for short responses (corrections, extractions)
OPENAI_MAX_TOKENS_SHORT=50

# Max tokens for medium responses (analysis, captions)
OPENAI_MAX_TOKENS_MEDIUM=150

# Max tokens for long responses (recommendations, queries)
OPENAI_MAX_TOKENS_LONG=500

# Temperature for precise tasks (typo correction)
OPENAI_TEMPERATURE_PRECISE=0.1

# Temperature for balanced tasks (analysis, categorization)
OPENAI_TEMPERATURE_BALANCED=0.3

# Temperature for creative tasks (suggestions, alternatives)
OPENAI_TEMPERATURE_CREATIVE=0.7

# ----------------------------------------------------------------------------
# UI SETTINGS (NEW)
# ----------------------------------------------------------------------------

# Initial number of books to display per page
BOOKS_PER_PAGE_INITIAL=12

# Number of books to add per "Load More" click
BOOKS_PER_LOAD_MORE=6

# Maximum books per genre display
MAX_BOOKS_PER_GENRE=48

# Delay between genre API calls in seconds (rate limiting)
GENRE_API_DELAY_SECONDS=5

# ----------------------------------------------------------------------------
# IMAGE PROCESSING
# ----------------------------------------------------------------------------

# OCR image resize factor for better accuracy
OCR_RESIZE_FACTOR=2

# Maximum image size in MB
MAX_IMAGE_SIZE_MB=10

# ----------------------------------------------------------------------------
# CONTENT SETTINGS
# ----------------------------------------------------------------------------

# Maximum number of captions to generate per book
MAX_CAPTIONS=3

# Maximum search results to return
MAX_SEARCH_RESULTS=40

# ----------------------------------------------------------------------------
# RATE LIMITING
# ----------------------------------------------------------------------------

# Enable/disable rate limiting
RATE_LIMIT_ENABLED=true

# Maximum searches allowed per minute
MAX_SEARCHES_PER_MINUTE=100

# Maximum API calls allowed per minute
MAX_API_CALLS_PER_MINUTE=50

# ----------------------------------------------------------------------------
# LOGGING
# ----------------------------------------------------------------------------

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# SECURITY
# ----------------------------------------------------------------------------

# Enable input validation and sanitization
ENABLE_INPUT_VALIDATION=true
